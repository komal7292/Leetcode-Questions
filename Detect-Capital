var detectCapitalUse = function(word) {
    if (word.toLowerCase() === word) {
        return true
    }
     false
    
    if (word.toUpperCase() === word) {
        return true
    }
     false
    
    if (word[0] === word[0].toUpperCase() && word.slice(1) === word.slice(1).toLowerCase()) {
        return true 
    }
    return false
};

console.log(detectCapitalUse("usa"))